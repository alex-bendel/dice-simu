<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/de.orangenscheibe.dicesim"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1">
    <TableRow>
		<de.orangenscheibe.dicesim.view.SingleDiceView
			android:id="@+id/singleDiceView"  
    		android:layout_width="fill_parent" 
    		android:layout_height="fill_parent"
    		android:gravity="center"
		    app:color="0xFFFF0000"
    	/>	
	</TableRow>
	<TableRow>
		<Button
			android:id="@+id/btnD20"  
		    android:layout_height="wrap_content" 
		    android:text="D20"
		    android:textSize="10sp"
		    android:padding="5dip"
		    android:layout_weight="1"
		    android:layout_width="0dip"
		    android:onClick="onClickRollD20"
		    />
		<Button
			android:id="@+id/btnD12"  
		    android:layout_height="wrap_content" 
		    android:text="D12"
		    android:textSize="10sp"
		    android:padding="5dip"
		    android:layout_weight="1"
		   	android:layout_width="0dip"
		    android:onClick="onClickRollD12"
		    />
		<Button
			android:id="@+id/btnD10"  
		    android:layout_height="wrap_content" 
		    android:text="D10"
		    android:textSize="10sp"
		    android:padding="5dip"
		    android:layout_weight="1"
		   	android:layout_width="0dip"
		    android:onClick="onClickRollD10"
		    />
		<Button
			android:id="@+id/btnD8"  
		    android:layout_height="wrap_content" 
		    android:text="D8"
		    android:textSize="10sp"
		    android:padding="5dip"
		    android:layout_weight="1"
		   	android:layout_width="0dip"
		    android:onClick="onClickRollD8"
		    />
		<Button
			android:id="@+id/btnD6"  
		    android:layout_height="wrap_content" 
		    android:text="D6"
		    android:textSize="10sp"
		    android:padding="5dip"
		    android:layout_weight="1"
		   	android:layout_width="0dip"
		    android:onClick="onClickRollD6"
		    />
		<Button
			android:id="@+id/btnD4"  
		    android:layout_height="wrap_content" 
		    android:text="D4"
		    android:textSize="10sp"
		    android:padding="5dip"
		    android:layout_weight="1"
		   	android:layout_width="0dip"
		    android:onClick="onClickRollD4"
		    />
	</TableRow>	
</TableLayout>
