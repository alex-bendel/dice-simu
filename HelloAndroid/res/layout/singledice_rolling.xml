<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	
	<de.orangenscheibe.dicesim.view.SingleDiceView
      android:id="@+id/singleDiceView"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:layout_margin="5dp"
      android:gravity="top"/>
      
  	<TableLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="4"
      android:gravity="bottom">
      <TableRow>
	      <Button
		      	android:id="@+id/btnD20"  				
				android:layout_height="wrap_content" 
			    android:layout_width="fill_parent"
				android:layout_weight="1"
				android:text="D20"
				android:textSize="10sp"
				android:padding="5dip"
				android:onClick="onClickRollD20"		    
				/>
		   <Button
				android:id="@+id/btnD12"  
				android:layout_height="wrap_content" 
			    android:layout_width="fill_parent"
				android:layout_weight="1"
			    android:text="D12"
			    android:textSize="10sp"
			    android:padding="5dip"
			    android:onClick="onClickRollD12"		    
			    />
			<Button
				android:id="@+id/btnD10"  
				android:layout_height="wrap_content" 
			    android:layout_width="fill_parent"
				android:layout_weight="1"
			    android:text="D10"
			    android:textSize="10sp"
			    android:padding="5dip"
			    android:onClick="onClickRollD10"		    
			    />
		</TableRow>			    
		<TableRow>
			<Button
				android:id="@+id/btnD8"  
				android:layout_height="wrap_content" 
			    android:layout_width="fill_parent"
				android:layout_weight="1"
			    android:text="D8"
			    android:textSize="10sp"
			    android:padding="5dip"
			    android:onClick="onClickRollD8"		    
			    />
			<Button
				android:id="@+id/btnD6"  
				android:layout_height="wrap_content" 
			    android:layout_width="fill_parent"
				android:layout_weight="1"
			    android:text="D6"
			    android:textSize="10sp"
			    android:padding="5dip"
			    android:onClick="onClickRollD6"		    
			    />
			<Button
				android:id="@+id/btnD4"  
				android:layout_height="wrap_content" 
			    android:layout_width="fill_parent"
				android:layout_weight="1"
			    android:text="D4"
			    android:textSize="10sp"
			    android:padding="5dip"
			    android:onClick="onClickRollD4"		    
			    />
		</TableRow>
	</TableLayout>
</LinearLayout>	